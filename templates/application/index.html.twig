{% extends 'base.html.twig' %}


{% block body %}
    <h1> Application Management </h1>
<div  class="col-sm-3"> <a  class="btn btn-success" href="{{ path('application_add') }}">Add Application</a></div>
<div class="show-article-container p-3 mt-4">
    <div class="row">
        <div class="col-sm-12">

    <table class="col-sm-12">
        <tr>
            <th>App Name</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Actions</th>
        </tr>
    {% for app in apps  %}
            <tr>
                <td>{{ app.name }}</td>
                <td>{{ app.created|date("m/d/Y") }} </td>
                <td>{{ app.updated|date("m/d/Y") }} </td>
                <td>

                    <a class="btn btn-warning" href="{{ path('app_edit',{id: app.id})}}">Edit</a>
                    <a class="btn btn-danger" href="{{ path('app_del',{id: app.id})}}">Delete</a>
                    <a class="btn btn-info" href="{{ path('application_change',{app_id: app.id}) }}">Show Changes</a>
                </td>

            </tr>
    {% endfor %}
    </table>

        </div>
    </div>
{% endblock %}
